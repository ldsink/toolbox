<?xml version="1.0"?>
<yandex>
    <clickhouse_remote_servers>
        <!-- 拥有 2 个分片的集群 -->
        <cluster_2s>
            <!-- 数据分片 1  -->
            <shard>
                <internal_replication>false</internal_replication>
                <replica>
                    <host>server01</host>
                    <port>9000</port>
                    <user>default</user>
                </replica>
            </shard>
            <!-- 数据分片 2  -->
            <shard>
                <internal_replication>false</internal_replication>
                <replica>
                    <host>server02</host>
                    <port>9000</port>
                    <user>default</user>
                </replica>
            </shard>
        </cluster_2s>
    </clickhouse_remote_servers>
</yandex>
